@model Parkeasy.Models.BookingViewModels.AmendViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Amend</title>
</head>
<body>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Amend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehicle.Registration" class="control-label"></label>
                <input asp-for="Vehicle.Registration" class="form-control" />
                <span asp-validation-for="Vehicle.Registration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Model" class="control-label"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Colour" class="control-label"></label>
                <input asp-for="Vehicle.Colour" class="form-control" />
                <span asp-validation-for="Vehicle.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Travellers" class="control-label"></label>
                <input asp-for="Vehicle.Travellers" class="form-control" />
                <span asp-validation-for="Vehicle.Travellers" class="text-danger"></span>
            </div>
            @Html.HiddenFor(Model => Model.Flight)
            @Html.HiddenFor(Model => Model.Booking)
            @Html.HiddenFor(Model => Model.BookingId)
            @Html.HiddenFor(Model => Model.VehicleId)
            @Html.HiddenFor(Model => Model.FlightId)
            @Html.HiddenFor(Model => Model.Charge)
            <div class="form-group">
                <input type="submit" value="Amend" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>