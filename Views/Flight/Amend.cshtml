@model Parkeasy.Models.BookingViewModels.AmendViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Amend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Flight.Id" />
            <div class="form-group">
                <label asp-for="Flight.DepartureNumber" class="control-label"></label>
                <input asp-for="Flight.DepartureNumber" class="form-control" />
                <span asp-validation-for="Flight.DepartureNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.ReturnNumber" class="control-label"></label>
                <input asp-for="Flight.ReturnNumber" class="form-control" />
                <span asp-validation-for="Flight.ReturnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.DepartureDateTime" class="control-label"></label>
                <input asp-for="Flight.DepartureDateTime" class="form-control" />
                <span asp-validation-for="Flight.DepartureDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.ReturnDateTime" class="control-label"></label>
                <input asp-for="Flight.ReturnDateTime" class="form-control" />
                <span asp-validation-for="Flight.ReturnDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Destination" class="control-label"></label>
                <input asp-for="Flight.Destination" class="form-control" />
                <span asp-validation-for="Flight.Destination" class="text-danger"></span>
            </div>
            @Html.HiddenFor(Model => Model.Booking)
            @Html.HiddenFor(Model => Model.Vehicle)
            @Html.HiddenFor(Model => Model.BookingId)
            @Html.HiddenFor(Model => Model.VehicleId)
            @Html.HiddenFor(Model => Model.FlightId)
            @Html.HiddenFor(Model => Model.Charge)
            <div class="form-group">
                <input type="submit" value="Amend" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>