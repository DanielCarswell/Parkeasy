@model Parkeasy.Models.Flight

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartureNumber" class="control-label"></label>
                <input asp-for="DepartureNumber" class="form-control" />
                <span asp-validation-for="DepartureNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnNumber" class="control-label"></label>
                <input asp-for="ReturnNumber" class="form-control" />
                <span asp-validation-for="ReturnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="DepartureDateTime" />
<input type="hidden" asp-for="ReturnDateTime" />


</body>
</html>