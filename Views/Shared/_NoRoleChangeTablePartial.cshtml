@model string

<td style="width:150px;">
    <div class="btn-group" role="group">
                                        
        <a asp-action="Edit" type="button" class="btn btn-info" asp-route-id="@Model">
            <i class="fas fa-pencil-alt"></i>
        </a>
        <a asp-action="Details" type="button" class="btn btn-success" asp-route-id="@Model">
            <i class="fas fa-list-alt"></i>
        </a>
        <a asp-action="Delete" type="button" class="btn btn-danger" asp-route-id="@Model">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</td>