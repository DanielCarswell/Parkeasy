@model Parkeasy.Models.Invoice

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Enquiry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEnquiry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvoiceType" class="control-label"></label>
                <input asp-for="InvoiceType" class="form-control" />
                <span asp-validation-for="InvoiceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvoiceBody" class="control-label"></label>
                <input asp-for="InvoiceBody" class="form-control" />
                <span asp-validation-for="InvoiceBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Enquiry" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

</body>
</html>