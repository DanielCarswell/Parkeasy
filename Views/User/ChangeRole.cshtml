@model Parkeasy.Models.AccountViewModels.ChangeRoleViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeRole</title>
</head>
<body>

<h4>Change Role of: @Model.FirstName @Model.LastName 
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role"></label>
                @Html.DisplayFor(Model => Model.Role)
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                @Html.DropDownList("Name", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @Html.HiddenFor(Model => Model.Id)
            @Html.HiddenFor(Model => Model.Role)
            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-star"></i>
                      Change Role</button>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

</body>
</html>