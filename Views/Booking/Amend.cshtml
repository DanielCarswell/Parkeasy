@model Parkeasy.Models.BookingViewModels.AmendViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Amend</title>
</head>
<body>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Amend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Booking.DepartureDate" class="control-label"></label>
                    <input asp-for="Booking.DepartureDate" class="form-control" />
                    <span asp-validation-for="Booking.DepartureDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.ReturnDate" class="control-label"></label>
                    <input asp-for="Booking.ReturnDate" class="form-control" />
                    <span asp-validation-for="Booking.ReturnDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.Servicing" class="control-label"></label>
                    <input asp-for="Booking.Servicing" class="form-control" />
                </div>
                @Html.HiddenFor(Model => Model.Flight)
            @Html.HiddenFor(Model => Model.Vehicle)
            @Html.HiddenFor(Model => Model.BookingId)
            @Html.HiddenFor(Model => Model.VehicleId)
            @Html.HiddenFor(Model => Model.FlightId)
            @Html.HiddenFor(Model => Model.Charge)
            <div class="form-group">
                <input type="submit" value="Amend" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>