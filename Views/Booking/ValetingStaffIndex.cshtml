@model IEnumerable<Parkeasy.Models.Booking>
    
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<br />
<table class="table table-striped table-bordered table-condensed table-responsive table-hover">
    <thead>
        <tr>
            <th>
                    <p>Email</p>
                </th>
                <th>
                    <p>Departure Date</p>
                </th>
                <th>
                    <p>Return Date</p>
                </th>
                <th>
                    <p>Duration</p>
                </th>
                <th>
                    <p>Status</p>
                </th>
                <th>
                   <p>Slot</p> 
                </th><th>
                    <p>Servicing</p>
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
    
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Duration) Days</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotId)
            </td>
            <td>
                @if(item.Servicing.Equals(true))
                {
                   <p>Required</p>
                }
                else
                {
                    <p>Not Added</p>
                }
            </td>
            <td>
            @if(item.Status=="Booked" && item.DepartureDate <= DateTime.Now)
            {
                <a asp-action="CheckInBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
                    Check-In
                </a>
            }
            @if((item.Status=="Booked" && item.DepartureDate <= DateTime.Now) || item.Status == "Parked" )
            {
               
                <a asp-action="DelayBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
                    Delay
                </a>
               
            }
            @if(item.Status == "Delayed")
            {
                <a asp-action="UndelayBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
                    On Schedule
                </a>
            }
            @if((item.Status=="Parked" || item.Status == "Delayed") && item.Valeting.Equals(true))
            {
                <a asp-action="ValetingComplete" type="button" class="btn btn-success" asp-route-id="@item.Id">
                    Valeted
                </a>
            }
            @if(item.Status=="Parked" || item.Status == "Delayed")
            {
                <a asp-action="CompleteBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
                    Complete
                </a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>