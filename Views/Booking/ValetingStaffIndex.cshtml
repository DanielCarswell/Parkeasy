@model IEnumerable<Parkeasy.Models.Booking>
    
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<br />
<table class="table table-striped table-bordered table-condensed table-responsive table-hover">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DepartureDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SlotId)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotId)
            </td>
            <td>
            @if(item.Status=="Booked")
            {
                <a asp-action="CheckInBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
             Check-In
        </a>
            }
            @if(item.Status=="Booked" || item.Status == "Parked")
            {
               
                    <a asp-action="DelayBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
             Delay
        </a>
               
            }
            @if(item.Status == "Delayed")
            {
                <a asp-action="DelayBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
             Delay
        </a>
            }
            @if(item.Status=="Parked" || item.Status == "Delayed")
            {
                <a asp-action="CompleteBooking" type="button" class="btn btn-success" asp-route-id="@item.Id">
            Complete
        </a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>