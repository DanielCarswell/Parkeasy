@model IEnumerable<Parkeasy.Models.MonthlyBookingReport>

<style>
    .right-align{
        float: right;
        padding-right: 50px;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
<br />
<h2>
    <strong>Monthly Bookings Report</strong>
</h2>
<br />
<table class="table table-striped table-bordered table-condensed table-responsive table-hover">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoOfBookings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                <th>
                    @Html.DisplayNameFor(model => model.ReportDay)
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        @if(item.NoOfBookings != 0)
            {
                var total = item.TotalAmount /2;
        <tr>
            <td>
                @Html.DisplayFor(model => item.NoOfBookings)
            </td>
            <td>
                @total
            </td>
            <td>
                @Html.DisplayFor(model => item.ReportDay)
           </td>
        </tr>
            }
        }
    </tbody>
</table>
<br />
@{
    var Month = 0;
    string currentMonth = null;
    foreach(MonthlyBookingReport r in Model)
    {
        Month = (int) r.ReportMonth;
    }

    switch(Month)
    {
        case 1:
        currentMonth = "January";
        break;
        case 2:
        currentMonth = "February";
        break;
        case 3:
        currentMonth = "March";
        break;
        case 4:
        currentMonth = "April";
        break;
        case 5:
        currentMonth = "May";
        break;
        case 6:
        currentMonth = "June";
        break;
        case 7:
        currentMonth = "July";
        break;
        case 8:
        currentMonth = "April";
        break;
        case 9:
        currentMonth = "September";
        break;
        case 10:
        currentMonth = "October";
        break;
        case 11:
        currentMonth = "November";
        break;
        case 12:
        currentMonth = "December";
        break;
    }
}
<div stlye="float: left;
        padding-left: 50px; font-size: 100px;">
        <h4>Current Month: @currentMonth </h4>
               
        </div>
</body>
</html>