@model Parkeasy.Models.Pricing

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

<h4>Change Prices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PerDay" class="control-label"></label>
                    <input asp-for="PerDay" class="form-control" />
                    <span asp-validation-for="PerDay" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicingCost" class="control-label"></label>
                    <input asp-for="ServicingCost" class="form-control" />
                    <span asp-validation-for="ServicingCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                <input type="submit" value="Change" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

</body>
</html>