@model Parkeasy.Models.ReportViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

<h4>Generate PDF Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reports">            <div class="form-group">
                <label asp-for="Report"></label>
                @Html.DropDownList("Report", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Report" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-list-alt"></i>
                      Generate</button>
        </div>
            </form>
    </div>
</div>

</body>
</html>